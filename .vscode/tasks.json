{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc-5 生成活动文件",
            "command": "/usr/bin/gcc-5",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                //"${workspaceFolder}/source/*/*.c",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                // "-L",
                // "${workspaceFolder}/components",
                // "-l",
                // "Components"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}